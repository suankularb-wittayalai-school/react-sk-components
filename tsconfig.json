{
  "compilerOptions": {
    /* Language and Environment */
    "lib": ["es6", "dom", "es2017"],
    "target": "es5",
    "jsx": "react",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"],
    },

    /* Emit */
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist/esm",
    "declarationDir": "dist/types",

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
